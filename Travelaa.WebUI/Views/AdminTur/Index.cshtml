@model List<Travelaa.WebUI.Dtos.ResaultDestinationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}



<section class="content">

    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Turlar</h3>

            <div class="card-tools">
                <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                    <i class="fas fa-minus"></i>
                </button>
                <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
                    <i class="fas fa-times"></i>
                </button>
            </div>
        </div>
        <div class="card-body p-0">
            <table class="table table-striped projects">
                <thead>
                    <tr>
                        <th style="width: 1%">
                            #
                        </th>
                        <th style="width: 20%">
                            Tur İsmi
                        </th>
                        <th style="width: 20%">
                            Tur Görseli
                        </th>
                        <th>
                            Tur Ücreti
                        </th>
                        <th style="width: 10%" class="text-center">
                         Kategori
                        </th>
                        <th style="width: 20%">
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                #
                            </td>
                            <td>
                                <a>
                                    @item.description
                                </a>
                                <br />
                                <small>
                                    @item.date.ToString("dd MMMM yyyy")
                                </small>
                            </td>
                            <td>

                                <img src="@item.ImageUrt" alt="Avatar" class="table-avatar" style="width: 80px; height: 80px;">


                            </td>
                            <td class="project_progress">
                                <div class="progress progress-sm">
                                    <div class="progress-bar
        @if (item.price <= 2000) {
            @:bg-green
        }
        else if (item.price > 2000 && item.price <= 3500) {
            @:bg-yellow
        }
        else if (item.price > 3500 && item.price <= 5000) {
            @:bg-orange
        }
        else if (item.price > 5000 && item.price <= 10000) {
            @:bg-red
        }"
                                         role="progressbar"
                                         aria-volumenow="57"
                                         aria-volumemin="0"
                                         aria-volumemax="100"
                                         style="width: 50%"></div>
                                </div>
                                <small>
                                    @item.price
                                </small>
                            </td>
                            <td class="project-state">
                                <span class="badge
    @if (item.CategoryName == "Doğa") {
        @:badge-success
    }
    else if (item.CategoryName == "Kültür ve Tarih") {
        @:badge-primary
    }
    else if (item.CategoryName == "Macera") {
        @:badge-warning
    }
    else if (item.CategoryName == "Deniz ve Plaj") {
        @:badge-info
    }
    else if (item.CategoryName == "Gastronomi") {
        @:badge-danger
    }
    else if (item.CategoryName == "Kış") {
         @:badge-purple
    }
    else if (item.CategoryName == "Sanat ve Festival") {
        @:badge-dark
    }
    else if (item.CategoryName == "Tekne ve Yat Turları") {
        @:badge-secondary
    }
    else if (item.CategoryName == "Yürüyüş") {
        @:badge-success
    }
    ">
                                    @item.CategoryName
                                </span>
                            </td>

                            <td class="project-actions text-right">
                                <a class="btn btn-primary btn-sm" href="#">
                                    <i class="fas fa-folder">
                                    </i>
                                    Detaylar
                                </a>
                                <a class="btn btn-info btn-sm" href="/AdminTur/UpdateDestinationn/@item.destinationId">
                                    <i class="fas fa-pencil-alt">
                                    </i>
                                    Güncelle
                                </a>
                                <a class="btn btn-danger btn-sm" href="/AdminTur/DeleteDestinationn/@item.destinationId">
                                    <i class="fas fa-trash">
                                    </i>
                                    Sil
                                </a>
                            </td>
                        </tr>
                    }


                </tbody>
            </table>
        </div>
        <!-- /.card-body -->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
