@model Travelaa.WebUI.Dtos.UpdateCategoryDto
@{
    ViewData["Title"] = "UpdateCategory";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}


<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Güncelle Sayfası</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <form method="post">
                        <input type="hidden" asp-for="CategoryId" />
                        
                        <div class="form-group mb-3">
                            <label>Kategori İsmi</label>
                            <input type="text" asp-for="CategoryName" class="form-control" placeholder="Şehir adı giriniz" />
                        </div>

                    <div class="form-group mb-3">
                        <label>Kategori Açıklaması</label>
                        <textarea asp-for="Description" class="form-control" rows="3" placeholder="Açıklam"></textarea>
                    </div>


                        <div class="form-group mb-3">
                            <label>Görsel URL</label>
                            <input type="text" asp-for="ImageUrl" class="form-control" placeholder="Görsel URL'si giriniz" />
                        </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary w-100">Kategoriyi Güncelle</button>
                    </div>
                </form>
                </div>
            </div>
        </div>
    </div>
</section>
