@model List<Travelaa.WebUI.Dtos.ResaultCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/AdminLayout.cshtml";
}



<section class="content">

    <!-- Default box -->
    <div class="card card-solid">
        <div class="card-body pb-0">
            <div class="row d-flex align-items-stretch">
                @foreach(var item in Model)
                {
                    <div class="col-12 col-sm-6 col-md-4 d-flex align-items-stretch">
                        <div class="card bg-light">
                           
                            <div class="card-body pt-0">
                                <div class="row">
                                    <div class="col-7">
                                        <h2 class="lead"><b>@item.CategoryName</b></h2>
                                        <p class="text-muted text-sm"><b>Açıklama: </b> @item.Description </p>
                                        
                                    </div>
                                    <div class="col-5 text-center">
                                        <img src="@item.ImageUrl" alt="" class="img-circle img-fluid">
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer">
                                <div class="text-right">
                                    <a href="#" class="btn btn-sm bg-teal">
                                        <i class="fas fa-edit"></i> Güncelle
                                    </a>
                                    <a href="#" class="btn btn-sm btn-primary">
                                        <i class="fas fa-trash-alt"></i> Sil
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>

                }
               

               


               


            </div>

        </div>
       
    </div>
    <!-- /.card -->

</section>